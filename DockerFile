# ==========================
# üèóÔ∏è Build Stage
# ==========================
FROM node:22-alpine AS builder

WORKDIR /app

# Enable pnpm
RUN corepack enable pnpm

# Copy lockfiles for caching
COPY package.json pnpm-lock.yaml* ./

# Install dependencies
ENV CI=true
RUN pnpm install --frozen-lockfile

# Copy source code
COPY . .

# Build the production bundle
RUN pnpm run build

# ==========================
# üöÄ Production Stage
# ==========================
FROM node:22-alpine AS runner

WORKDIR /app

# Copy build output
COPY --from=builder /app/dist ./dist

# Copy pnpm lockfile and package.json to install serve locally
COPY package.json pnpm-lock.yaml* ./

# Enable pnpm
RUN corepack enable pnpm

# Install serve **locally** (not global)
RUN pnpm add serve

# Expose port
EXPOSE 80

# Serve the app using npx to use local serve
CMD ["npx", "serve", "-s", "dist", "-l", "80"]
